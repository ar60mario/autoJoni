<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.ventas.entities.NuevaFactura" schema="joni" table="nueva_factura">
        <id name="id" column="ID">
            <generator class="identity"/>
        </id>
        <property name="gravado" type="double" column="GRAVADO"/>
        <property name="impuesto" type="double" column="IMPUESTO"/>
        <property name="iva" type="double" column="IVA"/>
        <property name="total" type="double" column="TOTAL"/>
        <property name="totalMp" type="double" column="TOTAL_MP"/>
        <property name="cuitCliente" type="string" column="CUIT_CLIENTE"/>
        <many-to-one name="producto"
                    class="com.ventas.entities.Producto"
                     lazy="false">
                     <column name="ID_PRODUCTO" not-null="false"/>
        </many-to-one>
        <many-to-one name="articulo"
                    class="com.ventas.entities.ArticuloCompra"
                     lazy="false">
                     <column name="ID_ARTICULO_COMPRA" not-null="false"/>
        </many-to-one>
        <many-to-one name="compraMercadoPago"
                    class="com.ventas.entities.CompraClienteMercadoPago"
                     lazy="false">
                     <column name="ID_COMPRA_CLIENTE_MERCADO_PAGO" not-null="false"/>
        </many-to-one>
    </class>
</hibernate-mapping>